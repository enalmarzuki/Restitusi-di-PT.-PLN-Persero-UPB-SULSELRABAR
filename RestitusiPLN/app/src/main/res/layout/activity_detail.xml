<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <EditText
                android:visibility="gone"
                android:id="@+id/edt_no_restitusi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:text="Formulir SPPD"
                android:textSize="20sp"
                android:textColor="#000000"/>

            <ImageView
                android:id="@+id/imgV_sppd"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_marginBottom="10dp"
                android:scaleType="fitCenter"
                android:src="@mipmap/ic_launcher_round"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:text="Tiket Pesawat"
                android:textSize="20sp"
                android:textColor="#000000"/>

            <ImageView
                android:id="@+id/imgV_tiket_pesawat"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_marginBottom="10dp"
                android:scaleType="fitCenter"
                android:src="@mipmap/ic_launcher_round"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:text="Tiket Kwitansi Tiket"
                android:textSize="20sp"
                android:textColor="#000000"/>

            <ImageView
                android:id="@+id/imgV_kwitansi_pesawat"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_marginBottom="10dp"
                android:scaleType="fitCenter"
                android:src="@mipmap/ic_launcher_round"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:text="Boarding Pass"
                android:textSize="20sp"
                android:textColor="#000000"/>

            <ImageView
                android:id="@+id/imgV_boarding_pass"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_marginBottom="10dp"
                android:scaleType="fitCenter"
                android:src="@mipmap/ic_launcher_round"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:text="Kwitansi Penginapan"
                android:textSize="20sp"
                android:textColor="#000000"/>

            <ImageView
                android:id="@+id/imgV_kwitansi_penginapan"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_marginBottom="10dp"
                android:scaleType="fitCenter"
                android:src="@mipmap/ic_launcher_round"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:text="SPPD Manual"
                android:textSize="20sp"
                android:textColor="#000000"/>

            <ImageView
                android:id="@+id/imgV_sppd_manual"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_marginBottom="10dp"
                android:scaleType="fitCenter"
                android:src="@mipmap/ic_launcher_round"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="5dp"
                android:text="Komentar Admin"
                android:textSize="20sp"
                android:textColor="#000000"/>

            <TextView
                android:id="@+id/tv_komentar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:text="Komentar Admin"
                android:textSize="20sp"
                android:textColor="#000000"/>


        </LinearLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>