<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity">

    <ImageView
        android:id="@+id/home_header"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:scaleType="fitXY"
        android:src="@drawable/ic_homa" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/foto_profil"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="50dp"
            android:src="@mipmap/ic_launcher"
            app:civ_border_color="@color/white"
            app:civ_border_overlay="true"
            app:civ_border_width="2pt"
            android:elevation="24dp"/>

    <TextView
        android:id="@+id/tv_welcome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/foto_profil"
        android:textAlignment="center"
        android:text="Welcome,"
        android:textColor="@android:color/white"
        android:textSize="15dp"
        android:elevation="200pt"
        android:shadowColor="#000000"
        android:shadowRadius="1"
        android:shadowDx="-1"
        android:shadowDy="-1"/>

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_welcome"
        android:textAlignment="center"
        android:text="Nama Anda"
        android:textColor="#000000"
        android:textSize="25dp"
        android:textStyle="bold"
        android:elevation="20pt"
        android:shadowColor="#FFFFFF"
        android:shadowRadius="1"
        android:shadowDx="-1"
        android:shadowDy="-1"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/home_header"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp">

        <Button
            android:id="@+id/btn_pengajuan"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:drawableTop="@mipmap/ic_launcher"
            android:text="Pengajuan" />

        <Button
            android:id="@+id/btn_statusrestitusi"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/btn_pengajuan"
            android:drawableTop="@mipmap/ic_launcher"
            android:text="Status" />

        <Button
            android:id="@+id/btn_pengaturan"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_below="@+id/btn_pengajuan"
            android:layout_marginTop="20dp"
            android:drawableTop="@mipmap/ic_launcher"
            android:text="Pengaturan" />

        <Button
            android:id="@+id/btn_logout"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_below="@+id/btn_statusrestitusi"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@+id/btn_pengajuan"
            android:drawableTop="@mipmap/ic_launcher"
            android:text="Logout" />
    </RelativeLayout>

</RelativeLayout>